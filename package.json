{
  "name": "xpi-ts",
  "version": "0.2.7",
  "description": "Bitcore-compatible wallet SDK for Lotus",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lib/bitcore": {
      "types": "./dist/lib/bitcore/index.d.ts",
      "import": "./dist/lib/bitcore/index.js"
    },
    "./lib/bitcore/*": {
      "types": "./dist/lib/bitcore/*.d.ts",
      "import": "./dist/lib/bitcore/*.js"
    },
    "./lib/rank": {
      "types": "./dist/lib/rank/index.d.ts",
      "import": "./dist/lib/rank/index.js"
    },
    "./lib/rank/*": {
      "types": "./dist/lib/rank/*.d.ts",
      "import": "./dist/lib/rank/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    }
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LotusiaStewardship/xpi-ts.git"
  },
  "keywords": [
    "lotus",
    "xpi",
    "lotusia",
    "tools",
    "wallet",
    "rpc",
    "rank"
  ],
  "author": "Lotusia Stewardship",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LotusiaStewardship/xpi-ts/issues"
  },
  "homepage": "https://github.com/LotusiaStewardship/xpi-ts#readme",
  "dependencies": {
    "@noble/hashes": "^1.7.2",
    "bn.js": "5.2.2",
    "bs58": "6.0.0",
    "elliptic": "^6.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/bn.js": "5.2.0",
    "@types/bs58": "4.0.4",
    "@types/elliptic": "6.4.18",
    "@types/jest": "^29.5.0",
    "@types/node": "24.0.10",
    "jest": "^29.7.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.1.0",
    "tsx": "^4.21.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.47.0"
  }
}
